<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abyandafa.kalkulator.MainActivity">


    <EditText
        android:layout_width="357dp"
        android:id="@+id/Ans"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/buttonDivide"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="/"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA1"
        app:layout_constraintLeft_toRightOf="@+id/buttonMult"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonCalc"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="="
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA2"
        app:layout_constraintLeft_toRightOf="@+id/buttonDivide"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonSub"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="-"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA3"
        app:layout_constraintLeft_toRightOf="@+id/buttonCalc"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonSum"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="+"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA3"
        app:layout_constraintLeft_toRightOf="@+id/buttonSub"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonClear"
        android:onClick="btnClicked"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:text="Hapus"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Ans"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonMult"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="*"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA1"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonA4"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA7"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonA8"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        android:layout_marginLeft="165dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonA5"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA8"
        app:layout_constraintLeft_toRightOf="@+id/buttonA4"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonA9"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        app:layout_constraintLeft_toRightOf="@+id/buttonA8"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonA6"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA9"
        app:layout_constraintLeft_toRightOf="@+id/buttonA5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonA1"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA4"
        app:layout_constraintRight_toLeftOf="@+id/buttonA2"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/buttonA2"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA5"
        android:layout_marginLeft="165dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonA3"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonA6"
        app:layout_constraintLeft_toRightOf="@+id/buttonA2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonA7"
        android:onClick="btnClicked"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:text="7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear"
        app:layout_constraintRight_toLeftOf="@+id/buttonA8"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/buttonA0"
        android:onClick="btnClicked"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/buttonClear"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Ans" />

</android.support.constraint.ConstraintLayout>

